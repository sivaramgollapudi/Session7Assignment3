<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sivaram.session7assignment3.MainActivity">

    <Button
        android:id="@+id/btnBrowseGallary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/browse_image"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnClearImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_image"
        android:textAllCaps="false"
        android:layout_above="@+id/imgSelectedPicture"
        android:layout_toRightOf="@+id/btnBrowseGallary"
        android:layout_toEndOf="@+id/btnBrowseGallary"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <ImageView
        android:id="@+id/imgSelectedPicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingStart="5dp"
        app:srcCompat="@android:color/background_light"
        android:contentDescription=""
        android:layout_below="@+id/btnBrowseGallary"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
